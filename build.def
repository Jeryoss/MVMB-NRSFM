Bootstrap: docker
From: nvidia/cuda:10.2-cudnn8-devel-ubuntu18.04

%labels
	MANTAINER Aron Fothi

%post
	# Downloads the latest package lists (important).
	apt-get update -y

	# Install python and other tools
	# Non-interactive is used to ensure prompts are omitted.

    DEBIAN_FRONTEND=noninteractive apt-get install -y --no-install-recommends \
	python3-dev \
	python3-tk \
	python3-pip \
	python3-setuptools \
	systemd \
	imagemagick \
	curl \
    wget \
    git \
	openslide-tools

	python3 -m pip install virtualenv jupyter ipyparallel cgroup-utils



%files


%environment
    export PORT=8889
    export LC_ALL=C

%runscript
    VENV=$1
    echo "Sourcing $VENV"
    shift
    exec bash -c "source $VENV/bin/activate;$@"

%startscript
    echo "Started new instance on $(date)"

%test
    grep -q NAME=\"Ubuntu\" /etc/os-release
    if [ $? -eq 0 ]; then
        echo "Container base is Ubuntu as expected."
    else
        echo "Container base is not Ubuntu."
    fi
    python3 -m pip show jupyter

%labels
    Author fothar
    Version v0.0.1

%help
    This is a demo container used to illustrate a def file that uses all
    supported sections.